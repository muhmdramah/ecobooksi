@model UpdateCategoryDto

@{
    ViewData["Title"] = "Udpate Category";
}

<div class="card shadow border-0 mt-4">
    <div class="card bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Update Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="EditAndSave" asp-controller="Category" asp-route-categoryId="@Model.CategoryId" method="post">
            <div class="p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="CategoryName" type="text" class="form-control border-0 shadow" />
                    <label asp-for="CategoryName" class="ms-2"></label>
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" type="text" class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                <div class="row mt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>

                    <div class="col-6 col-md-3">
                        <a asp-action="Index" asp-controller="Category"
                           class="btn btn-secondary form-control">
                            Back To List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        // <partial name="_ValidationScriptsPartial"></partial>
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
