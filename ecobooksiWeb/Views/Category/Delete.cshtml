@model DeleteCategoryDto

@{
    ViewData["Title"] = "Delete Category";
}


<form asp-action="DeleteAndSave" asp-controller="Category" asp-route-categoryId="@Model.CategoryId" method="post">
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="CategoryName" class="p-0">Category Name</label>
            <input asp-for="CategoryName" type="text" disabled class="form-control" />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0">Display Order</label>
            <input asp-for="DisplayOrder" type="number" disabled class="form-control" />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>

            <div class="col-6 col-md-3">
                <a asp-action="Index" asp-controller="Category"
                   class="btn btn-secondary form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>
