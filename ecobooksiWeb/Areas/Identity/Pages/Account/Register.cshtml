@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="register-wrapper">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-xl-6 col-lg-7 col-md-9">

                <div class="card register-card shadow-sm border-0">

                    <div class="card-body p-4 p-md-5">

                        <!-- Header -->
                        <div class="text-center mb-4">
                            <i class="bi bi-person-plus-fill text-primary" style="font-size: 2.5rem;"></i>
                            <h1 class="h4 mt-3 mb-1 fw-semibold">@ViewData["Title"]</h1>
                            <p class="text-muted small mb-0">
                                Create your account to continue
                            </p>
                        </div>

                        <!-- Form -->
                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            @Html.AntiForgeryToken()

                            <div asp-validation-summary="ModelOnly"
                                 class="alert alert-danger py-2"
                                 role="alert"></div>

                            <div class="row g-3">

                                <!-- Name -->
                                <div class="col-md-6 form-floating">
                                    <input asp-for="Input.Name" class="form-control" placeholder="Write you name!" />
                                    <label asp-for="Input.Name">Full Name</label>
                                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                                </div>

                                <!-- Email & Password -->
                                <div class="col-md-6 form-floating">
                                    <input asp-for="Input.Email" class="form-control" placeholder="example@host.com" />
                                    <label asp-for="Input.Email"></label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 form-floating">
                                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Write your phone number!" />
                                    <label asp-for="Input.PhoneNumber">Phone Number</label>
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 form-floating">
                                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Write a complex password!" />
                                    <label asp-for="Input.Password"></label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 form-floating">
                                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                                    <label asp-for="Input.ConfirmPassword"></label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>

                                <!-- Street & City -->
                                <div class="col-md-6 form-floating">
                                    <input asp-for="Input.StreetAddress" class="form-control" placeholder="Streer St" />
                                    <label asp-for="Input.StreetAddress">Street Address</label>
                                    <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 form-floating">
                                    <input asp-for="Input.City" class="form-control" placeholder="The 5th settlement" />
                                    <label asp-for="Input.City"></label>
                                    <span asp-validation-for="Input.City" class="text-danger"></span>
                                </div>

                                <!-- State & Postal Code -->
                                <div class="col-md-6 form-floating">
                                    <input asp-for="Input.State" class="form-control" placeholder="Cairo" />
                                    <label asp-for="Input.State"></label>
                                    <span asp-validation-for="Input.State" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-4 mt-3">
                                    <input asp-for="Input.PostalCode" class="form-control" placeholder="494139" />
                                    <label asp-for="Input.PostalCode"></label>
                                    <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                                </div>


                            </div> <!-- /.row -->
                            <!-- Role (full width) -->
                            <div class="form-floating mb-4 mt-3">
                                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                                    <option disabled selected>Do you want select a Role?</option>
                                </select>
                            </div>

                            <div class="form-floating mb-4 mt-3">
                                <select asp-for="Input.CompanyId" style="display:none;" asp-items="@Model.Input.CompanyList" class="form-select">
                                    <option disabled selected>Do you want select a Company?</option>
                                </select>
                            </div>

                            <!-- Submit -->
                            <div class="mt-3">
                                <button id="registerSubmit" type="submit" class="btn btn-primary w-100 py-2 fw-semibold">
                                    Create Account
                                </button>
                            </div>

                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function (){
            $('#Input_Role').change(function() {
                var selection = $('#Input_Role Option:Selected').text();

                if(selection == 'Company'){
                    $('#Input_CompanyId').show();
                }
                else{
                    $('#Input_CompanyId').hide();
                }
            })
        })
    </script>
}   