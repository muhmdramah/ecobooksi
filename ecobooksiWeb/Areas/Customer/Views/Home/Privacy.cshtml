@{
    ViewData["Title"] = "Privacy Policy";
}

<section class="privacy-policy py-5" style="font-family: 'Segoe UI', sans-serif; background-color: #2a5a5b;">
    <div class="container">
        <!-- Header -->
        <div class="text-center mb-5">
            <h1 class="display-5 fw-bold" style="color: #c5cbcb;">@ViewData["Title"]</h1>
            <p class="fs-5" style="color: #c5cbcb;">
                Your privacy matters to us. Learn how we handle and protect your personal information.
            </p>
        </div>

        <!-- Policy Cards -->
        <div class="row g-4">
            <div class="col-md-6" style="text-align:center;">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h4 class="fw-bold mb-3">Information We Collect</h4>
                        <p class="text-muted">
                            We collect data like name, email, and usage patterns to improve your experience.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-6" style="text-align:center;">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h4 class="fw-bold mb-3">How We Use Information</h4>
                        <p class="text-muted">
                            Your data is used to provide services, respond to inquiries, and enhance your experience securely.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-6" style="text-align:center;">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h4 class="fw-bold mb-3">Data Protection</h4>
                        <p class="text-muted">
                            We employ advanced security measures to safeguard your personal information at all times.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-6" style="text-align:center;">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h4 class="fw-bold mb-3">Your Rights</h4>
                        <p class="text-muted">
                            You have full control over your data. Request access, modifications, or deletion at any time.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-12" style="text-align:center;">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h4 class="fw-bold mb-3">Contact Us</h4>
                        <p class="text-muted">
                            Questions or concerns? Contact our support team for assistance with privacy-related matters.
                        </p>
                        <a href="mailto:mohammedrammah83@gmail.com" class="btn btn-success">Mail Me Right Now!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

