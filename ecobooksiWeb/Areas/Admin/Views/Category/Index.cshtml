@model List<Category>
@{
    ViewData["Title"] = "Categories";
}

<div class="card shadow border-0 mt-4">
    <div class="card bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Categories</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-action="Create"
                   asp-controller="Category"
                   class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create A New Category
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Category Id</th>
                    <th>Category Name</th>
                    <th>Dispaly Order</th>
                    @* <th>Details</th>
            <th>Edit</th>
            <th>Delete</th> *@
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.OrderBy(order => order.DisplayOrder))
                {
                    <tr>
                        <td>@category.CategoryId</td>
                        <td>@category.CategoryName</td>
                        <td>@category.DisplayOrder</td>
                        <td>
                            <div class="w-75 btn btn-group" role="group">
                                <a asp-action="Details" asp-controller="Category"
                                   asp-route-categoryId="@category.CategoryId" class="btn btn-primary mx-2">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-action="Edit" asp-controller="Category"
                                   asp-route-categoryId="@category.CategoryId" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-controller="Category"
                                   asp-route-categoryId="@category.CategoryId" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
