@model Product
@{
    ViewData["Title"] = "About a Product";
}


<div class="card shadow border-0 my-4">
    <div class="card bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product Information</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <div class="row mb-3">
            <div class="col-2 fw-bold">
                Product Title
            </div>
            <div class="col-8">
                @Model.Title
            </div>
        </div>


        <div class="row mb-3">
            <div class="col-2 fw-bold">
                Description
            </div>
            <div class="col-8">
                @Model.Description
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-2 fw-bold">
                Author
            </div>
            <div class="col-8">
                @Model.Author
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-2 fw-bold">
                List Price
            </div>
            <div class="col-8">
                @Model.ListPrice
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-2 fw-bold">
                Price Fifty
            </div>
            <div class="col-8">
                @Model.PriceFifty
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-2 fw-bold">
                Price Hundred
            </div>
            <div class="col-8">
                @Model.PriceHundred
            </div>
        </div>

        <div class="row pt-3">
            <div class="col-6 col-md-3">
                <a asp-action="Edit"
                   asp-route-productId="@Model.ProductId"
                   asp-controller="Product"
                   class="btn btn-warning form-control">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
            </div>

            <div class="col-6 col-md-3">
                <a asp-action="Index"
                   asp-controller="Product"
                   class="btn btn-secondary form-control">
                    Back To List
                </a>
            </div>
        </div>

    </div>
</div>
