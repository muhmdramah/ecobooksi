@model Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="card shadow border-0 my-4">
    <div class="card bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="DeleteAndSave" asp-controller="Product" asp-route-productId="@Model.ProductId" method="post">
            <div class="p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Title" class="ms-2 disabled"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2 disabled"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" type="text" class="form-control border-0 shadow" />
                    <label asp-for="ISBN" class="ms-2 disabled"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Author" class="ms-2 disabled"></label>
                </div>
                
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" type="text" class="form-control border-0 shadow" />
                    <label asp-for="ListPrice" class="ms-2 disabled"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-2 disabled"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="PriceFifty" type="text" class="form-control border-0 shadow" />
                    <label asp-for="PriceFifty" class="ms-2 disabled"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="PriceHundred" type="text" class="form-control border-0 shadow" />
                    <label asp-for="PriceHundred" class="ms-2 disabled"></label>
                </div>


                <div class="row mt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>

                    <div class="col-6 col-md-3">
                        <a asp-action="Index" asp-controller="Product"
                           class="btn btn-secondary form-control">
                            Back To List
                        </a>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>


