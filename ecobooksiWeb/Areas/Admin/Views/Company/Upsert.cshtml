@model Company

@{
    ViewData["Title"] = "Create Company";
}

<div class="card shadow border-0 my-4">
    <div class="card bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.CompanyId != 0 ? "Update" : "Create") Company</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">

            <input asp-for="@Model.CompanyId" hidden />
            
            <div class="row">
                <div class="col-10">

                    <div class="border p-3">
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.CompanyName" type="text" class="form-control border-0 shadow" />
                            <label asp-for="@Model.CompanyName" class="ms-2"></label>
                            <span asp-validation-for="@Model.CompanyName" class="text-danger"></span>
                        </div>

                        <div class="py-2 col-12">
                            <label asp-for="@Model.StreetAddress" class="ms-2 text-muted"></label>
                            <textarea asp-for="@Model.StreetAddress" type="text" class="form-control border-0 shadow"> </textarea>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.City" type="text" class="form-control border-0 shadow" />
                            <label asp-for="@Model.City" class="ms-2"></label>
                            <span asp-validation-for="@Model.City" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.State" type="text" class="form-control border-0 shadow" />
                            <label asp-for="@Model.State" class="ms-2"></label>
                            <span asp-validation-for="@Model.State" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.PostalCode" type="text" class="form-control border-0 shadow" />
                            <label asp-for="@Model.PostalCode" class="ms-2"></label>
                            <span asp-validation-for="@Model.PostalCode" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.PhoneNumber" type="text" class="form-control border-0 shadow" />
                            <label asp-for="@Model.PhoneNumber" class="ms-2"></label>
                            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.CompanyId != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>

                            <div class="col-6 col-md-3">
                                <a asp-action="Index" asp-controller="Company"
                                   class="btn btn-out form-control">
                                    Back To List
                                </a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        // <partial name="_ValidationScriptsPartial"></partial>
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
